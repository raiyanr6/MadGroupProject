<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarbonFootprintTracker"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/flightUsageInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Number of flights per year"

        android:inputType="number" />

    <Spinner
        android:id="@+id/vehicleTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/mileageInput"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Approximate mileage (km/year)"
        android:layout_marginTop="16dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>